            android:name=".UserProfile"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar"/>
        <activity
            android:name=".AnimationPage"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePage"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar" />
        <activity
            android:name=".sponsorsActivity"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar" />
        <activity
            android:name=".aboutUs_activity"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar" />
        <activity
            android:name=".donations_activity"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar" />
    </application>

</manifest>
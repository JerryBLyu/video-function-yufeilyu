        android:supportsRtl="true"
        android:theme="@style/Theme.ExpeditionSupportApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".EditOtherDetails"
            android:theme="@style/Theme.ExpeditionSupportApp.NoActionBar"></activity>
